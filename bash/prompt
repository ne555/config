#/* vim: set filetype=sh : */
source /usr/share/git/completion/git-prompt.sh
tmux_directory=$([ -n "$TMUX" ] && tmux setenv TMUXPWD_$(tmux display -p "#I") "$PWD")

fg=3
bg=4
black=0
red=1
green=2
yellow=3
blue=4
purple=5
cyan=6
grey=7

GIT_PS1_SHOWDIRTYSTATE='show'

prompt_color="\[$(tput bold setaf $green setab $blue)\]"
git_color="\[$(tput setaf $yellow)\]"
reset_color="\[$(tput sgr0)\]"

PS1="${prompt_color}\W${git_color}"'$(__git_ps1 " (%s)")'"${prompt_color}\$${reset_color} "
