set my_user = aldo.jirdeb
set my_email = $my_user@zoho.com

#IMAP
set imap_user = $my_email
set folder = imaps://imap.zoho.com:993
set spoolfile = +INBOX
set imap_check_subscribed

#store locally to speed up
set header_cache=~/.cache/mutt/headers
set message_cachedir=~/.cache/mutt/bodies

#borradores
#set postponed = +[Gmail]/Drafts

# Allow Mutt to open new imap connection automatically.
unset imap_passive

set imap_keepalive = 300
set mail_check = 120


#SMTP
#do not store sent mail
unset record
#set smtp_url = smtp://$my_user@smtp.gmail.com:587/
#SSL
#set smtp_url = smtp://$my_user@smtp.zoho.com:465
#TLS
set smtp_url = smtp://$my_user@smtp.zoho.com:587
set from = $my_email
set realname = "Aldo Jirdeb"
set use_from = yes
set hostname = zoho.com

#compose mails
set editor = nvim
set edit_headers = yes
set include
set fast_reply = yes
#bind editor <Tab> complete-query
#bind editor ^T complete
#bind editor <space> noop

#messages
set sort = reverse-threads
set sort_aux = last-date-received
set send_charset="utf-8"
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc

#view html
set mailcap_path = ~/.local/share/mutt/mailcap
auto_view text/html


#address-book
set alias_file = "~/.config/addressbook.mutt"
set sort_alias = alias
source $alias_file



#Key binding
#backspace
bind index,pager  previous-page
#folds
bind index za collapse-thread

bind pager j next-line
bind pager k previous-line


# Palette for use with the Linux console.  Black background.
color hdrdefault cyan black
color quoted cyan black
color signature cyan black
color attachment red black
color message brightwhite black
color error brightred black
color indicator black red
color status brightgreen blue
color tree white black
color normal white black
color markers red black
color search white black
color tilde brightmagenta black
color index blue black ~F
color index red black "~N|~O"


#thread collapse at the start
folder-hook . 'push "<collapse-all>"'
folder-hook . 'push ":set collapse\_unread=no<enter>"'

macro index \R '<read-thread><collapse-thread><next-unread>' 'Mark the current thread as read'
macro index '{' ':set my_oldcollapse_unread=$collapse_unread<enter>:set collapse_unread=yes<enter><collapse-thread>:set collapse_unread=$my_oldcollapse_unread<enter>' 'Collapse thread.'
macro index '}' '{' '(Un)collapse thread.'

set collapse_unread
